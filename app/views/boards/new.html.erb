<div class="container">
  <%= link_to "Home", root_path %>
  <% if @board.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>
      <ul>
        <% @board.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @board do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :height %>
        <%= f.number_field :height %>
      </div>

      <div class="form-group">
        <%= f.label :width %>
        <%= f.number_field :width %>
      </div>

      <div class="form-group">
        <%= f.label :mine_count %>
        <%= f.number_field :mine_count %>
      </div>

      <div class="form-group">
        <%= f.submit "Generate Board", class: 'submit-button' %>
      </div>
  <% end %>
</div>
